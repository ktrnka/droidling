<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.ktrnka.droidling"
    android:versionCode="52"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.github.ktrnka.droidling.ExtendedApplication"
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_action_logo"
        android:label="@string/app_name"
        android:theme="@style/Theme.Droidling" >
        <activity
            android:name="com.github.ktrnka.droidling.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.github.ktrnka.droidling.PersonalActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.CardsUIActivity"/>
        <activity
            android:name="com.github.ktrnka.droidling.InterpersonalActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.CardsUIActivity"/>
        <activity
            android:name="com.github.ktrnka.droidling.LanguageIdentificationActivity"
            android:configChanges="orientation|screenSize" />
        <activity android:name="com.github.ktrnka.droidling.AboutActivity" />
        <activity android:name="com.github.ktrnka.droidling.AboutPersonalActivity" />
        <activity android:name="com.github.ktrnka.droidling.AboutInterpersonalActivity" />
        <activity android:name="com.github.ktrnka.droidling.AboutLangIDActivity" />
    </application>

</manifest>